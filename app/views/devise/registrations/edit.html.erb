<h2>Change Password</h2>

<%= simple_form_for(resource, as: resource, url: user_registration_path(resource), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :password, autocomplete: "off", label: "New Password", required: true %>
    <%= f.input :password_confirmation, label: "New Password confirmation", required: true %>
    <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
